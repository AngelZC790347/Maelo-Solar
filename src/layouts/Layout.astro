---
import Header from "../layouts/Header.astro";
import "../styles/global.css";
import Footer from "./Footer.astro";
import "@fortawesome/fontawesome-free/css/all.css";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/Vista Logos/logo-svg.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>Maelo Solar - Solar Panels Service</title>
  </head>
  <script is:inline src="/scripts/events.js"></script>
  <body class="snap-y snap-mandatory overflow-y-scroll h-screen">
    <Header />
    <slot />
    <Footer />
  </body>
</html>

<style>
  html,
  body {
    margin: 0;
    width: 100%;
    height: 100%;
    overflow-x: hidden;
  }
</style>
